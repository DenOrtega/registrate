input, textarea {
	font-size:16px;
	line-height:18px;
	font-family: 'Open Sans', sans-serif;
}

input[type=text] {
	border: 1px solid #ddd;
    background: white;
    outline: none;
		margin-bottom:10px;
    -webkit-border-radius: 16px;
    -moz-border-radius: 16px;
    border-radius: 16px;
    width: 100%;
    padding-left: 10px;
}

.submit {
	width: 100%;
	max-width:320px;
	display: block;
	height: 40px;
	background-color:#f27925;
	color:#FFF;
	text-transform:uppercase;
	border:none;
	font-weight:600;
	outline: none;
	-webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
}

.submit:hover{
	background-color:#f16113;
}

